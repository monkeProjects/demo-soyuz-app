{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start server",
            "type": "shell",
            "command": "python -m http.server 8080",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$python",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Serving HTTP on ::",
                        "endsPattern": "..."
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}